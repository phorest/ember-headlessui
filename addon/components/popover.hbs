{{#let (element this.tagName) as |Tag|}}
  <Tag id={{this.guid}} ...attributes>
    {{yield (hash
      open=this.open
      Button=(
        component "popover/-button"
        guid=this.buttonGuid
        popoverGuid=this.guid
        panelGuid=this.panelGuid
        open=this.open
        onClick=this.handleButtonClick
      )
      Panel=(
        component "popover/-panel"
        guid=this.panelGuid
        popoverGuid=this.guid
        open=this.open
      )
      Overlay=(
        component "popover/-overlay"
        guid=this.overlayGuid
        popoverGuid=this.guid
        open=this.open
      )
    )}}
  </Tag>
{{/let}}
